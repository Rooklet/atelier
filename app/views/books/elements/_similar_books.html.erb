  <h2>Books in similar categories</h2>
   <table>
    <thead>
      <tr>
        <th>title</th>
        <th>ISBN</th>
        <th>action</th>
      </tr>
    </thead>
    <tbody>
      <% @category.similar_books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.isbn %></td>
          <td><%= link_to('show', book_path(book.id)) %>
        </tr>
      <% end %>
    </tbody>
  </table>